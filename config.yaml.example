# Agent Voice Bridge Configuration
# Copy to config.yaml and fill in your credentials

# Or use environment variables:
#   TWILIO_ACCOUNT_SID, TWILIO_AUTH_TOKEN, TWILIO_PHONE_NUMBER
#   GEMINI_API_KEY
#   VOICE_BRIDGE_URL

twilio:
  account_sid: "your_account_sid"
  auth_token: "your_auth_token"
  phone_number: "+1234567890"

ai:
  provider: gemini  # or openai
  
gemini:
  api_key: "your_gemini_api_key"
  model: "gemini-2.0-flash-exp"

openai:
  api_key: "your_openai_api_key"  # optional
  model: "gpt-4o-realtime-preview"

server:
  host: "0.0.0.0"
  port: 8082
  # Public URL for Twilio webhook (use ngrok for local dev)
  public_url: "https://your-domain.com"

# System prompt for the AI
system_prompt: |
  You are a helpful AI assistant on a phone call.
  Be conversational, concise, and natural.
  Speak clearly and at a moderate pace.
